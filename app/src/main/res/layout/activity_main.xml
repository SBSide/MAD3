<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.iveci.mad3.MainActivity">

    <Button
        android:id="@+id/button"
        android:onClick="onyouclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일반 토스트 뜨기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X 좌표" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y 좌표" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:onClick="onyouclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중간에 토스트 뜨게하기" />

    <Button
        android:id="@+id/button3"
        android:onClick="onyouclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 화면 지정" />

    <Button
        android:id="@+id/button4"
        android:onClick="onyouclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SNACKBAR로 메시지" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onyouclick"
        android:text="기본 대화상자" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onyouclick"
        android:text="라디오 대화상자" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onyouclick"
        android:text="체크박스 대화상자" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onyouclick"
        android:text="사용자정의 대화상자" />
</LinearLayout>
